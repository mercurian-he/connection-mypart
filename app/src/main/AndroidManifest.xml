<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sxh.connection" >

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="sxh.connection.activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sxh.connection.activity.CardHolderActivity"
            android:label="@string/title_activity_card_holder" >
        </activity>
        <activity
            android:name="sxh.connection.activity.SignUpActivity"
            android:label="@string/title_activity_sign_in" >
        </activity>
        <activity
            android:name="sxh.connection.activity.EditCardActivity"
            android:label="@string/title_activity_edit_card" >
        </activity>
    </application>

</manifest>
